<div class="account-portal-container" id="account-pane">

    <!------------ Container to Display Account Information ------------>
    <div class="header-container" id="account-header-container">
        <div id="user-information-container">
            <a id="username">Hello, {{user.username}}</a>
            <div id="account-pane-score">
                <p class="redline" id="account-pane-wordmark">STEM</p><p>Score: {{user.score}}</p> <!-- Ensure this dynamically updates -->
            </div>
        </div>

        <div class="logout-container">
            <a id="logout-button" class="account-portal-button" href="/logout">Logout</a>
        </div>
    </div>


    <!---------------- Container to Show Objectives ------------------->
    
    <div id="account-objectives-container">

        <!-- 
        * The files that create the routes for the articles, lessons, and games are:
        * 1. src/routes/login-and-registration.js - Create the tasks for the user when they register
        * 2. src/middleware/database/fetch-tasks.js - Queries the DB for the tasks and create the objects, <type>Task, that are imported (ex: articleTask)
        * 3. src/routes/tasks.js - Create the routes that query the DB and change the completion status    
        -->

        <!-- Articles To-Do Section -->
        <div class="objectives-container">
            <h2 class="objective-header">ğŸ“– Articles</h2>
            <ul> <!-- Import tasks for articleTasks DB table in DB -->
                {{#each articleTasks}}
                    {{> components/account-screen/task this}}
                {{/each}}
            </ul>
        </div>

        <!-- Basics To-Do Section -->
        <div class="objectives-container">
            <h2 class="objective-header">ğŸ† Basics</h2>
            <ul> <!-- Import tasks for basicsTasks DB table in DB -->
                {{#each basicsTasks}}
