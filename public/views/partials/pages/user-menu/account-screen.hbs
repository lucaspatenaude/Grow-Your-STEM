                {{/each}}
            </ul>
        </div>

        <!-- Topics To-Do Section -->
        <div class="objectives-container">
            <h2 class="objective-header">ğŸ” Topics</h2>
            <ul> <!-- Import tasks for topicTasks DB table in DB -->
                {{#each topicTasks}}
                    {{> components/account-screen/task this}}
                {{/each}}
            </ul>
        </div>

        <!-- Games To-Do Section -->
        <div class="objectives-container">
            <h2 class="objective-header">ğŸ‘¾ Games</h2>
            <ul> <!-- Import tasks for gameTasks table in DB -->
                {{#each gameTasks}}
                    {{> components/account-screen/task this}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>
