<div class="account-portal-container" id="account-pane">
    <div id="account-pane-content-container">

        <div id="account-header-container">
            <div id="user-information-container">
                <a id="username">Hello, {{user.username}}</a>
                <p>STEM Score: {{user.score}}</p> <!-- Ensure this dynamically updates -->
            </div>

            <div class="logout-container">
                <a id="logout-button" class="account-portal-button" href="/logout">Logout</a>
            </div>
        </div>

        <div id="account-objectives-container">

            <!-- Articles To-Do Section -->
            <div class="objectives-container">
                <h2 class="objective-header">üìñ Articles</h2>
                {{#if articles}}
                    <ul>
                        {{#each articles}}
                            {{> components/account-screen/task this}}
                        {{/each}}
                    </ul>
                {{else}}
                    <p>No articles available.</p>
                {{/if}}
            </div>

            <!-- Lessons To-Do Section -->
            <div class="objectives-container">
                <h2 class="objective-header">üèÜ Lessons</h2>
                {{#if lessons}}
                    <ul>
                        {{#each lessons}}
                            {{> components/account-screen/task this}}
                        {{/each}}
                    </ul>
                {{else}}
                    <p>No lessons available.</p>
                {{/if}}
            </div>

            <!-- Games To-Do Section -->
            <div class="objectives-container">
                <h2 class="objective-header">üëæ Games</h2>
                {{#if games}}
                    <ul>
                        {{#each games}}
                            {{> components/account-screen/task this}}
                        {{/each}}
                    </ul>
                {{else}}
                    <p>No games available.</p>
                {{/if}}
            </div>

        </div>
    </div>
</div>
