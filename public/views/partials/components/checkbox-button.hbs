<div class="article button-container">
    <button class="article-read-button" id="article-checkbox-{{checkbox-number}}" onclick="completeTask('Read Article &quot;How Do Tariffs Work&quot;')">
        Click Here to Check Article Off Checklist
    </button>
</div>

<script>
async function completeTask(taskName) {
    try {
        const response = await fetch('/api/tasks/complete-task', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ userId: 1, taskName }) // Replace with dynamic userId
        });

        const result = await response.json();
        if (response.ok) {
            alert(`Task completed! You earned ${result.points} points.`);
        } else {
            alert(`Error: ${result.error}`);
        }
    } catch (error) {
        console.error('Error completing task:', error);
        alert('An error occurred. Please try again.');
    }
}
</script>